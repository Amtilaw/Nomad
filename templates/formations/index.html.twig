															<td style="white-space: nowrap; text-overflow:ellipsis; overflow: hidden; max-width:1px; cursor: pointer;" onclick='location.href="{{ path('module_listequestion',{moduleId: module.id}) }}"'>{{module.nom}}</td>
															<td style="white-space: nowrap; text-overflow:ellipsis; overflow: hidden; max-width:1px;">{{module.level}}</td>
															<td></td>
